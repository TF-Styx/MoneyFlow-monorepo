<UserControl x:Class="MoneyFlow.WPF.Views.UserControls.AuthWindowControls.RegistrationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneyFlow.WPF.Views.UserControls.AuthWindowControls"
             mc:Ignorable="d" d:Background="White">

    <Border>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Регистрация" FontSize="25" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <!--<StackPanel>
                <TextBlock Text="Почта" FontSize="20" Margin="0 0 0 5"/>
                <TextBox Text="{Binding Email}" Width="250" FontSize="20"  Margin="0 0 0 20"/>
            </StackPanel>-->
            <StackPanel>
                <TextBlock Text="Имя пользователя" FontSize="20" Margin="0 0 0 5"/>
                <TextBox Text="{Binding UserName, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" Width="250" FontSize="20"  Margin="0 0 0 20"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Логин" FontSize="20" Margin="0 0 0 5"/>
                <TextBox Text="{Binding Login, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" Width="250" FontSize="20" Margin="0 0 0 20"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Пароль" FontSize="20" Margin="0 0 0 5"/>
                <TextBox Text="{Binding Password, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" Width="250" FontSize="20" Margin="0 0 0 20"/>
            </StackPanel>
        </StackPanel>
    </Border>

</UserControl>
