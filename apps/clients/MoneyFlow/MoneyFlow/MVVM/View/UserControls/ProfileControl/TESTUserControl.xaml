<UserControl x:Class="MoneyFlow.MVVM.View.UserControls.ProfileControl.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneyFlow.MVVM.View.UserControls.ProfileControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <DockPanel>
            <TextBlock Text="Сумма" Style="{StaticResource BaseTextBlockStyle}"/>
            <StackPanel>
                <DockPanel Margin="30 5 0 5">
                    <TextBlock Text="От" Style="{StaticResource BaseTextBlockStyle}"/>
                    <TextBox HorizontalAlignment="Right" Margin="30 5 0 5" Style="{StaticResource FinancilaJournalTBox}"/>
                </DockPanel>
                <DockPanel Margin="30 5 0 5">
                    <TextBlock Text="До" Style="{StaticResource BaseTextBlockStyle}"/>
                    <TextBox HorizontalAlignment="Right" Margin="30 5 0 5" Style="{StaticResource FinancilaJournalTBox}"/>
                </DockPanel>
            </StackPanel>
        </DockPanel>
        <DockPanel>
            <TextBlock Text="Дата" Style="{StaticResource BaseTextBlockStyle}"/>
            <StackPanel>
                <DockPanel Margin="30 5 0 5">
                    <TextBlock Text="От" Style="{StaticResource BaseTextBlockStyle}"/>
                    <DatePicker HorizontalAlignment="Right" Width="250">
                        <DatePicker.CalendarStyle>
                            <StaticResource ResourceKey="StyleCalendar" />
                        </DatePicker.CalendarStyle>
                    </DatePicker>
                </DockPanel>
                <DockPanel Margin="30 5 0 5">
                    <TextBlock Text="До" Style="{StaticResource BaseTextBlockStyle}"/>
                    <DatePicker HorizontalAlignment="Right" Width="250">
                        <DatePicker.CalendarStyle>
                            <StaticResource ResourceKey="StyleCalendar" />
                        </DatePicker.CalendarStyle>
                    </DatePicker>
                </DockPanel>
            </StackPanel>
        </DockPanel>
        <DockPanel>
            <TextBlock Text="Банк" Style="{StaticResource BaseTextBlockStyle}"/>
            <ComboBox HorizontalAlignment="Right" Margin="30 5 0 5" Style="{StaticResource MainComboBox}"/>
        </DockPanel>
        <DockPanel>
            <TextBlock Text="Категория" Style="{StaticResource BaseTextBlockStyle}"/>
            <ComboBox HorizontalAlignment="Right" Margin="30 5 0 5" Style="{StaticResource MainComboBox}"/>
        </DockPanel>
        <DockPanel>
            <TextBlock Text="Подкатегория" Style="{StaticResource BaseTextBlockStyle}"/>
            <ComboBox HorizontalAlignment="Right" Margin="30 5 0 5" Style="{StaticResource MainComboBox}"/>
        </DockPanel>
        <DockPanel>
            <TextBlock Text="Сортировка" Style="{StaticResource BaseTextBlockStyle}"/>
            <ComboBox HorizontalAlignment="Right" Margin="30 5 0 5" Style="{StaticResource MainComboBox}"/>
        </DockPanel>
    </StackPanel>
    
</UserControl>
