<UserControl x:Class="MoneyFlow.WPF.Client.Views.UserControls.RecoveryAccessUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneyFlow.WPF.Client.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             Background="White">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Востановление пароля" TextAlignment="Center" TextWrapping="Wrap" Width="250" FontSize="30" HorizontalAlignment="Center"/>
        <StackPanel Margin="0 20 0 0">
            <TextBlock Text="Почта" FontSize="20"/>
            <TextBox Text="{Binding Email, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" FontSize="20" Width="250"/>
        </StackPanel>
        <StackPanel Margin="0 20 0 0">
            <TextBlock Text="Логин" FontSize="20"/>
            <TextBox Text="{Binding Login, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" FontSize="20" Width="250"/>
        </StackPanel>
        <StackPanel Margin="0 20 0 0">
            <TextBlock Text="Новый пароль" FontSize="20"/>
            <TextBox Text="{Binding NewPassword, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" FontSize="20" Width="250"/>
        </StackPanel>
    </StackPanel>
</UserControl>
